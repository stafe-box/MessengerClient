<Window x:Class="MessengerClient.ColorPickerDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:colorpicker="clr-namespace:ColorPicker;assembly=ColorPicker"
        xmlns:local="clr-namespace:MessengerClient"
        mc:Ignorable="d"
        Title="ColorPickerDialog" Height="440" Width="220" ResizeMode="NoResize">
    <Grid>
        <StackPanel>
            <colorpicker:StandardColorPicker x:Name="Picker" Width="200" Height="380"/>
            <Button x:Name="Save" Content="OK" Margin="5,5,5,5" Click="Save_Click"/>
        </StackPanel>
    </Grid>
</Window>
